<!--pages/edit_landscape/edit_landscape.wxml-->
<view class="container">
  <view class="title">编辑景点 - {{myLandscapeName}}</view>

  <!-- 景点信息编辑 -->
  <view class="info-section">
    <view class="form-item">
      <text class="label">景点名称</text>
      <input class="field" placeholder="请输入景点名称" value="{{land_detail.name}}"></input>
    </view>

    <view class="form-item">
      <text class="label">景点描述</text>
      <textarea class="field" placeholder="请输入景点描述" value="{{land_detail.introduction}}"></textarea>
    </view>
  </view>

  <!-- 图片管理 -->
  <view class="image-section">
    <text class="label">景点图片管理（最多9张）</text>

    <!-- 添加图片按钮 -->
    <view wx:if="{{imageList.length < 9}}" class="add-image-btn" bindtap="chooseImage">
      <text class="add-text">+ 添加图片</text>
    </view>

    <!-- 图片网格 -->
    <view class="image-grid">
      <view wx:for="{{imageList}}" wx:key="index" class="image-wrapper">
        <image
          src="{{item}}"
          class="landscape-image"
          mode="aspectFill"
          data-src="{{item}}"
          bindtap="previewImage">
        </image>
        <image
          class="delete-icon"
          src="{{deleteIcon}}"
          data-index="{{index}}"
          bindtap="deleteImage">
        </image>
      </view>
    </view>
  </view>

  <!-- 提交按钮 -->
  <view class="submit-section">
    <button class="submit-btn" bindtap="submitChange">保存修改</button>
  </view>
</view>