.container {
  width: 100%;
  height: 100vh;
  position: relative;
  overflow: hidden;
}

.background-swiper {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.background-image {
  width: 100%;
  height: 100%;
}

.overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  z-index: 1;
}

.content {
  position: relative;
  z-index: 2;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding: 120rpx 60rpx 150rpx;
  box-sizing: border-box;
}

.logo-section {
  text-align: center;
  color: white;
}

.app-title {
  font-size: 72rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 20rpx;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
}

.app-subtitle {
  font-size: 32rpx;
  opacity: 0.9;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
}

.login-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.login-btn {
  width: 100%;
  height: 100rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.wechat-login {
  background: #07c160;
  color: white;
}

.wechat-login.loading {
  background: #06a050;
  opacity: 0.8;
}

.manager-login {
  background: rgba(255, 255, 255, 0.9);
  color: #333;
}

.login-btn:active {
  transform: scale(0.98);
}

.login-btn[disabled] {
  opacity: 0.6;
}