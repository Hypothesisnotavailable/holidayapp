.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.avatar-section {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  width:30%;
}

.avatar-container {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  overflow: hidden;
  position: relative;
  margin: 0 auto 20rpx;
}

.avatar-image {
  width: 100%;
  height: 100%;
}

.avatar-mask {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50rpx;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
}

.edit-icon {
  width: 30rpx;
  height: 30rpx;
  filter: brightness(0) invert(1);
}

.avatar-tip {
  font-size: 24rpx;
  color: #666;
}

.info-list {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 60%;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  width:100%;
  padding-top: 0rpx;
}

.info-item {
  padding: 30rpx;
  border-bottom: 1px solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  display: block;
  margin-bottom: 15rpx;
}

.info-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.info-content.active{
  display: block;
}

.info-input {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  padding: 10rpx;
  border: 1px solid #ddd;
  border-radius: 10rpx;
  background: #fafafa;
  margin-bottom: 10rpx;
}

.info-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.info-actions {
  margin-left: 20rpx;
}

.info-content.active .info-actions{
  margin-left: 0;
}

.action-buttons {
  display: flex;
  gap: 10rpx;
}

.action-btn {
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  border: none;
}

.action-btn.cancel {
  background: #f5f5f5;
  color: #666;
}

.action-btn.confirm {
  background: #07c160;
  color: white;
}

.edit-btn {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.6;
}

.wechat-auth-btn {
  background: #07c160;
  color: white;
  border: none;
  border-radius: 10rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

.preview-section {
  padding: 20rpx 0;
  bottom:20rpx;
}

.preview-btn {
  width: 100%;
  height: 80rpx;
  background: #007aff;
  color: white;
  border: none;
  border-radius: 20rpx;
  font-size: 30rpx;
}

.upload-status {
  position: fixed;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}