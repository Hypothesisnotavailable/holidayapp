/*将页面的背景颜色设置为灰色*/
.hblock{
  
  display: flex;
  flex-direction: column;
  height: 250rpx;
  align-items: center;
  justify-content: center;
  border-bottom: 8rpx solid lightgray;
  border-top:  1rpx solid lightgray;
  background-color: white;/*将view设置成白色，∵我此时将页面的背景色设置成了灰色*/
}
/*头像的样式*/
.head{
  width: 150rpx;
  height: 150rpx;
  border-style: solid;
  border-color:  lightgray;
  border-width: 0.5rpx;
}
.name{
  margin-top: 10rpx;
  font: medium;
  color: black;
}


/*重新定义block的样式*/
.orderblock,.feedbackblock,.assessmentblock,.editblock{
  position: relative;
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  border-bottom: 8rpx solid lightgray;
}

/*图标的样式*/
/*图标的颜色是#43c74c*/
.assessment,.order,.feedback,.edit{
  position: absolute; 
  width: 50rpx;
  height: 50rpx;
  left: 30rpx;
}

/*内容的样式*/
.assessment2,.order2,.feedback2,.edit2{
  position: absolute; 
  left: 130rpx;
  font-size:35rpx; 
}

/*右边组件的样式*/
.arrow1,.arrow2,.arrow5,.arrow3{
  position: absolute; 
  right: 50rpx;
  font-size:45rpx; 
}


/*退出登录的样式*/
.exitbtn{
  position: relative; 
  font-size:35rpx; 
  width: 100%;
  height:100rpx;
  align-items: center;
  display: flex;
  justify-content: center;
  text-align: center;
  border-bottom: 8rpx solid lightgray;
}
.name{
  font-weight: bold;
}


