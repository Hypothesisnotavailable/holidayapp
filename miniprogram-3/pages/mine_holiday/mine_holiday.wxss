.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.user-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  overflow: hidden;
  margin-right: 30rpx;
  position: relative;
}

.user-avatar::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 60rpx;
  opacity: 0;
  transition: opacity 0.3s;
}

.user-avatar:active::after {
  opacity: 1;
}

.avatar-image {
  width: 100%;
  height: 100%;
}

.user-info {
  flex: 1;
}

.user-name-section {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.quick-edit-btn {
  width: 40rpx;
  height: 40rpx;
  padding: 8rpx;
  border-radius: 50%;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.quick-edit-btn:active {
  background: #e0e0e0;
  transform: scale(0.9);
}

.quick-edit-icon {
  width: 24rpx;
  height: 24rpx;
}

.user-phone {
  font-size: 28rpx;
  color: #666;
  font-family: monospace; /* 使用等宽字体，让脱敏手机号更整齐 */
}

.menu-list {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 35rpx 30rpx;
  border-bottom: 1px solid #f0f0f0;
  position: relative;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f8f8f8;
}

.menu-icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 30rpx;
}

.icon-image {
  width: 100%;
  height: 100%;
}

.menu-text {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.menu-arrow {
  font-size: 32rpx;
  color: #ccc;
  font-weight: bold;
}

.logout-section {
  padding: 20rpx 0;
}

.logout-btn {
  width: 100%;
  height: 90rpx;
  background: #ff4757;
  color: white;
  border: none;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.logout-btn:active {
  background: #ff3742;
}