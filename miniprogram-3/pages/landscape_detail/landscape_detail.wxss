/* pages/landscape/landscape_detail/landscape_detail.wxss */
page {
  height: 100%;
}
.swiperBlock {
  width: 100%;
  height: 30%;
}
.slide-image {
  width: 100%;
  height: 100%;
}
.T1{
  margin-left: 10rpx;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  font-size: x-large;
  font-weight: bolder;
}


/* 地点信息和导航按钮的容器及致电容器 */
.location-container,.contact-container {
  margin-top: 10rpx;
  border-bottom: 5rpx solid #f5f5f5;
  padding: 10rpx 20rpx;
  height: 50rpx;
  display: flex;
  justify-content: space-between; /* 两者分布在左右两边 */
  align-items: center; /* 垂直居中对齐 */
}

/* 地点信息 */
.location,.callBlock {
  font-size: large;
  color: #333;
}

/* 图片的样式 */
.icon-image {
  width: 24px; /* 调整图片大小 */
  height: 24px; /* 调整图片大小 */
}


/* 页面总容器 */
.container2 {
  padding: 20px;
  background-color: #f5f5f5;
}

/* 标题区域 */
.header {
  text-align: center;
}

.title {
  font-size: 24px;
  font-weight: bold;
  color: #333;
}

.sub-title {
  font-size: 14px;
  color: #888;
  margin-top: 10px;
}

/* 评分区域 */
.rating {
  margin-bottom: 30px;
  padding: 15px;
  background-color: #fff;
  border-radius: 10px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

.stars {
  font-size: 20px;
}

.review-text {
  margin-top: 10px;
  font-size: 16px;
  color: #666;
}

.review-date {
  margin-top: 5px;
  font-size: 12px;
  color: #aaa;
}

/*介绍、评价那些*/
/* 按钮容器 */
.button-container {
  margin-top: 10rpx;
  padding: 5rpx;
  width: 100%;
}
/* 按钮块 */
.button-block {
  display: flex;
  justify-content: flex-start;
}

/* 自定义按钮样式 */
.custom-button {
  justify-content: center;
  margin-right: 40rpx;
  text-align: center;
  font-weight: bold;
  padding: 5px 10px;
  color: #43c74c;
  cursor: pointer;
  width: 70rpx;
}


/* 内容区域 */
.content-area {
  padding: 20rpx;
  background-color: #f5f5f5;
  margin-top: 10rpx;
  width: 100%;
}
.introBlock{
  padding: 20rpx;
  width: 90%;
  background-color: #fff;
  border-radius: 10px;
  margin-bottom: 25rpx;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}
.content {
  margin-bottom: 10rpx;
  font-size: 16px;
  color: #333;
}



/* 评论区域 */
.comments {
  margin-bottom: 20px;
}

.comment-item {
  margin-bottom: 20px;
  padding: 10px;
  background-color: #fff;
  border-radius: 8px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
}

.user-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10px;
}

.user-info text {
  font-size: 16px;
  color: #333;
}

.date {
  font-size: 12px;
  color: #888;
}

.user-rating {
  font-size: 14px;
  color: #FFD700;
}

.comment-content {
  margin-top: 5px;
  font-size: 14px;
  color: #444;
}

/* 底部操作按钮 */
.bottom {
  display: flex;
  justify-content: space-around;
  margin-top: 20px;
}

.action-btn {
  padding: 10px 20px;
  width: 200rpx;
  text-align: center;
  background-color: #4CAF50;
  color: #fff;
  border: none;
  border-radius: 5px;
  font-size: 16px;
  cursor: pointer;
}

