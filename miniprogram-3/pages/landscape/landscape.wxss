/*滑动框——景点详细介绍*/
.landscapeBlock{
  width: 100%;
  height: 75%;
  padding: 0%;
  margin: auto;
}
.landscape-item{
  width: 95%;
  display: flex;
  align-items: center;
  margin:auto;
  /*border-bottom: 1rpx solid black; */
  margin-bottom: 5rpx;
  border: 1px solid rgba(0, 0, 0, 0.1); /* 设置四条边的边界颜色，较浅色 */
    box-shadow: 0 4px 2px -2px rgba(0, 0, 0, 0.5); /* 添加阴影效果，只有底边有 */
    border-radius: 8rpx; /* 边框圆角 */
    padding: 10rpx;
    box-sizing: border-box; /* padding不会撑开容器 */
}
/*景点代表图片*/
.pictureBlock{
  height: 100%;
  /*border-right: 1rpx solid black;*/
  display: flex;
  justify-content: center;
}
.picture{
  width: 400rpx;
  height: 300rpx;
  margin-bottom: 0;
}
/*景点的详细信息（除图片外的）*/
.profileBlock{
  padding: 10rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 10rpx;
}
.name{
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
/*查看详情的按钮*/
.checkDetail{
  margin-top: 20rpx;
  width: 140rpx;
  height: 30rpx;
  padding: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid gray;
  border-radius: 8rpx; /* 边框圆角 */
  color: gray;
}




