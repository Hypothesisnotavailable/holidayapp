/* 主容器 */
.container{
  width: 100%;
  padding: 0%;
  
}

.container>view{
  width: 100%;
}

/* 加载状态样式 */
.loading-container {
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-content {
  text-align: center;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #43c74c;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 40rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 32rpx;
  color: #666;
}

/* 错误状态样式 */
.error-container {
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.error-content {
  text-align: center;
  max-width: 600rpx;
}

.error-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 40rpx;
}

.error-message {
  font-size: 32rpx;
  color: #666;
  display: block;
  margin-bottom: 60rpx;
  line-height: 1.5;
}

.retry-btn {
  background: #43c74c;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  font-size: 32rpx;
}

.retry-btn:active {
  background: #38a943;
}

/* 轮播图样式 */
.banner-swiper {
  width: 100%;
  height: 300rpx;
  margin-bottom: 20rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 通知栏样式 */
.notification_bar {
  display: flex;
  align-items: center;
  width: 83%;
  margin: 0 auto 10rpx;
  padding: 0 30rpx;
  height: 80rpx;
  overflow: hidden;
  background: #f2f1c7;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 2rpx -2rpx rgba(0, 0, 0, 0.5);
}

.notification_bar_left {
  display: flex;
  align-items: center;
  padding: 0;
  height: 100%;
  overflow: hidden;
}

.bar_left {
  margin-left: 10rpx;
  width: 55rpx;
  height: 60rpx;
  flex-shrink: 0;
}

.bar_text {
  margin-left: 20rpx;
  font-size: 36rpx;
  color: #43c74c;
}

/* 景点列表样式 */
.landscapeBlock{
  height: 75%;
  padding: 0%;
}

.landscape-item{
  width: 100%;
  display: flex;
  align-items: center;
  margin: auto;
  margin-bottom: 20rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  box-shadow: 0 4rpx 2rpx -2rpx rgba(0, 0, 0, 0.5);
  border-radius: 16rpx;
  padding: 20rpx;
  box-sizing: border-box;
  background: white;
}

/* 图片容器样式 */
.pictureBlock{
  height: 100%;
  display: flex;
  justify-content: center;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.picture{
  width: 200rpx;
  height: 150rpx;
  border-radius: 12rpx;
  background: #f5f5f5;
  object-fit: cover;
  border: 1rpx solid #e0e0e0;
}

/* 景点信息样式 */
.profileBlock{
  padding: 0;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex: 1;
  min-width: 0;
}

.name{
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.profileBlock > view:nth-child(2) {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

/* 查看详情按钮 */
.checkDetail{
  margin-top: 10rpx;
  width: 140rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 2rpx solid #43c74c;
  border-radius: 30rpx;
  color: #43c74c;
  font-size: 28rpx;
  background: white;
  transition: all 0.3s ease;
}

.checkDetail:active {
  background: #43c74c;
  color: white;
}

/* 空状态提示 */
.empty-tip {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: #999;
  font-size: 28rpx;
}