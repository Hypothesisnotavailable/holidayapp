/* pages/landscape/landscape.wxss */
.container{
  height: 100%;
  width: 100%;
  padding: 0%;
  box-sizing: border-box;
}
/*最顶上那一条*/
.notification_bar {
  display: flex;
  align-items: center;
  /*top: 10rpx; 这条改不了艹*/
  width: 83%;
  margin-bottom: 10rpx;
  padding: 0 30rpx;
  height: 80rpx;
  overflow: hidden;
  background:#f2f1c7;
  border-radius: 20px; /* 设置曲线边框的半径 */
  box-shadow: 0 4px 2px -2px rgba(0, 0, 0, 0.5); /* 添加阴影效果，只有底边有 */
}
.notification_bar_left {
  display: flex;
  /*width: 80%;*/
  align-items: center;
  padding: 0;
  height: 100%;
  overflow: hidden;
  /*border-right: 1rpx solid black;*/
}
/*左边图片的大小*/
.bar_left {
  margin-left: 10rpx;
  width: 55rpx;
  height: 60rpx;
}
/*文字大小和颜色，距离图片多少像素显示*/
.bar_text {
  margin-left: 20rpx;
  font-size: 18px;
  color: #43c74c;
}
/*右边推荐路线*/
.bar_right{
  display: flex;
  justify-content: center;
  width: 20%;
  align-items: center;
  padding: 0;
  height:100%;
  color: gray;
}

