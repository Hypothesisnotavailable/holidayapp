/* pages/landscape/landscape.wxss */



.landscape_card{
  border: 3rpx solid red;
  width: 749rpx;
  height:400rpx;
}

/* 动画效果 */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}
@keyframes inkSpread {
  from {
    text-shadow: 0 0 0 rgba(0, 0, 0, 0);
  }
  to {
    text-shadow: 4rpx 4rpx 8rpx rgba(0, 0, 0, 0.5);
  }
}
.landscape_text{
  color: white; /* 字体颜色为白色 */
  font-size: 80rpx;
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  text-shadow: 2rpx 2rpx 4rpx rgba(0,0,0,0.5);
  font-weight: bold;
  animation: fadeIn 1s ease-in-out;
  /* 增加文字特色：倾斜效果 */
  transform: rotate(-10deg);
  overflow: hidden;
  white-space: nowrap;
}




