/* pages/community/community.wxss */
.container {
  display:contents;
  flex-direction: column;
  height: 100%;
  padding-bottom: 60px; /* 为输入区域留出空间 */
  box-sizing: border-box;
  align-items: flex-start; /* 将评论列表内部元素对齐到最左边 */
}

.comments-list {
  padding: 20px;
  box-sizing: border-box;
  align-items: flex-start; /* 将评论列表内部元素对齐到最左边 */
}

.comment {
  margin-bottom: 20px;
  display: flex;
  flex-direction: column;
  align-items: flex-start; /* 将评论内容和信息对齐到最左边 */
}

.comment-content {
  margin-bottom: 5px;
  word-wrap: break-word; /* 允许在单词内换行 */
  white-space: pre-wrap; /* 保留空白符和换行符 */
}

.comment-info {
  font-size: 12px;
  color: #666;
  margin-top: 2px; /* 调整作者和时间戳与内容的距离 */
}

.input-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
  background-color: #f9f9f9;
  border-top: 1px solid #ccc;
  box-sizing: border-box;
}

.input-text {
  flex: 1;
  padding: 10rpx; /* 调整内边距以适应边框 */
  background-color: #fff; /* 更白的背景色 */
  border: 1px solid #dcdcdc; /* 添加边框 */
  border-radius: 2rpx; /* 边框圆角 */
  margin-right: 10rpx; /* 与发送按钮保持一定间距 */
}

.publish-button {
  padding: 10px 20px;
  background-color: #1aad19;
  color: white;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}